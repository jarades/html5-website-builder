= form_for @offerpage do |f|
  -if @offerpage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@offerpage.errors.count, "error")} prohibited this offerpage from being saved:"
      %ul
        - @offerpage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :filename
    = f.text_field :filename
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :keywords
    = f.text_field :keywords
  .field
    = f.label :headline
    = f.text_field :headline
  .field
    = f.label :subhead
    = f.text_field :subhead
  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'
