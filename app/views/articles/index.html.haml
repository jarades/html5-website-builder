%h1 Listing articles

%table
  %tr
    %th Title
    %th Filename
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= link_to article.title, article
      %td= article.filename
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Publish', publish_article_path(article)
      %td= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete

